.well.product
  p Наименование: #{@product.name}
  p Вес: #{@product.wieght}
  p Ангар: #{@product.hangar.number}
- if can?(:update, Product)
  = link_to 'Изменить', edit_product_path(@product), class: 'btn btn-primary'
  '
- if can?(:destroy, Product)
  = link_to 'Удалить', @product, method: :delete, class: 'btn btn-primary'
